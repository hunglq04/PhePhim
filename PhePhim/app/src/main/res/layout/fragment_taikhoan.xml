<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorBackgroundRegister">

    <ImageView
        android:id="@+id/imgAvatarFTK"
        android:layout_width="200dp"
        android:layout_height="220dp"
        android:layout_marginTop="40dp"
        android:layout_gravity="center"
        android:scaleType="centerCrop"
        android:src="@drawable/dr_strange"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:layout_marginTop="20dp">

    <TextView
        android:id="@+id/txtUserFTK"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/colorTextColor"
        android:textSize="25dp"
        android:text="Lionel Messi"/>

    <ImageView
        android:id="@+id/imgEditNameFTK"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_gravity="center_vertical"
        android:src="@drawable/edit"/>

    </LinearLayout>

    <Button
        android:id="@+id/btnLogoutFTK"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:background="@drawable/border_button"
        android:text=" Đăng xuất"
        android:textSize="20dp"
        android:layout_marginTop="30dp"
        android:layout_gravity="center"
        android:textColor="@color/colorTextColor"/>

</LinearLayout>